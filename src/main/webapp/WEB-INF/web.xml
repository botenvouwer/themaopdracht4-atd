<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <description>Gmail username</description>
        <param-name>mail</param-name>
        <param-value>autodiesnttotaal</param-value>
    </context-param>
    <context-param>
        <description>Gmail password</description>
        <param-name>mailpass</param-name>
        <param-value>autototaaldienst</param-value>
    </context-param>
    <servlet>
        <servlet-name>HomePage</servlet-name>
        <servlet-class>servlet.WEB_Homepage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Contact</servlet-name>
        <servlet-class>servlet.WEB_Contact</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>servlet.WEB_Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CMS</servlet-name>
        <servlet-class>servlet.CMS_Homepage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VoorraadBeheer</servlet-name>
        <servlet-class>servlet.CMS_Voorraadbeheer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Factuur</servlet-name>
        <servlet-class>servlet.CMS_Factuur</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Factuur_Form</servlet-name>
        <servlet-class>servlet.CMS_Factuur_Form</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Bestelling</servlet-name>
        <servlet-class>servlet.CMS_Bestelling</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Bestelling_Aanmaken</servlet-name>
        <servlet-class>servlet.CMS_Bestelling_Aanmaken</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Gebruiker</servlet-name>
        <servlet-class>servlet.CMS_Gebruiker</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Gebruiker_Aanmaken</servlet-name>
        <servlet-class>servlet.CMS_Gebruiker_Aanmaken</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Gebruiker_Aanpassen</servlet-name>
        <servlet-class>servlet.CMS_Gebruiker_Aanpassen</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Werkplaats</servlet-name>
        <servlet-class>servlet.CMS_Werkplaats</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Registreer</servlet-name>
        <servlet-class>servlet.WEB_Registreer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>WelkomPagina</servlet-name>
        <servlet-class>servlet.WEB_Gebruiker</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Autobeheer</servlet-name>
        <servlet-class>servlet.WEB_Autobeheer</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomePage</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Contact</servlet-name>
        <url-pattern>/contact</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CMS</servlet-name>
        <url-pattern>/cms</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VoorraadBeheer</servlet-name>
        <url-pattern>/cms/voorraad</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Factuur</servlet-name>
        <url-pattern>/cms/factuur</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Factuur_Form</servlet-name>
        <url-pattern>/cms/factuur/form</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Bestelling</servlet-name>
        <url-pattern>/cms/bestellingen</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Bestelling_Aanmaken</servlet-name>
        <url-pattern>/cms/bestellingen/aanmaken</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Gebruiker</servlet-name>
        <url-pattern>/cms/gebruiker</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Gebruiker_Aanpassen</servlet-name>
        <url-pattern>/cms/gebruiker/aanpassen</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Gebruiker_Aanmaken</servlet-name>
        <url-pattern>/cms/gebruiker/aanmaken</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Werkplaats</servlet-name>
        <url-pattern>/cms/werkplaats</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Registreer</servlet-name>
        <url-pattern>/registreer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>WelkomPagina</servlet-name>
        <url-pattern>/welkomPagina</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Autobeheer</servlet-name>
        <url-pattern>/autobeheer</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <filter>
        <filter-name>FilterForSecurity</filter-name>
        <filter-class>filter.CMSFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>FilterForSecurity</filter-name>
        <url-pattern>/cms/*</url-pattern>
    </filter-mapping>
</web-app>
